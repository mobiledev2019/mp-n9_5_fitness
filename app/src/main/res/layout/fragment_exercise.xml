<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdbdb">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/youtube_ex_layout"
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:text="Online Exercises"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/training_online_icon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:padding="5dp"
                    android:id="@+id/btnStartOnline"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp"
                    android:text="Start"
                    android:textAllCaps="false"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/exercise_layout"
            android:layout_marginTop="20dp"
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:text="Exercises"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/flex_biceps"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:padding="5dp"
                    android:id="@+id/btnStartExercise"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp"
                    android:text="Start"
                    android:textAllCaps="false"/>

                <Button
                    android:padding="5dp"
                    android:id="@+id/btnSettingExercise"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/ic_settings_black_24dp"
                    android:text="Setting"
                    android:textAllCaps="false"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardio_layout"
            android:layout_marginTop="20dp"
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:text="Cardio"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/trainers"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:padding="5dp"
                    android:id="@+id/btnStartCardio"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp"
                    android:text="Start"
                    android:textAllCaps="false"/>

                <Button
                    android:padding="5dp"
                    android:id="@+id/btnCalendarCardio"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:text="Calendar"
                    android:textAllCaps="false"/>
                <Button
                    android:padding="5dp"
                    android:id="@+id/btnSettingCardio"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/ic_settings_black_24dp"
                    android:text="Setting"
                    android:textAllCaps="false"/>




            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:background="#dfdbdb"></LinearLayout>


    </LinearLayout>


</ScrollView>