<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdbdb"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="Weather"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/umbrella_businessman"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:padding="5dp"
                    android:id="@+id/btnViewWeather"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/ic_airplay_black_24dp"
                    android:text="View"
                    android:textAllCaps="false"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/exercise_layout"
            android:layout_marginTop="20dp"
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistics"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/calories_icon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:padding="5dp"
                    android:id="@+id/btnViewNote"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/ic_event_note_black_24dp"
                    android:text="View"
                    android:textAllCaps="false"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:background="#dfdbdb"></LinearLayout>
    </LinearLayout>



</ScrollView>